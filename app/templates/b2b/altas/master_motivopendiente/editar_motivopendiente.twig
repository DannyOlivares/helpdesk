        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <form id="editar_motivopendiente_form" action="" method="POST">
                        <div class="box-body col-sm-4"></div>
                        <div class="box-body col-sm-4">
                            <input type='hidden' name='id_motivopendiente' id='id_motivopendiente' value='{{ db_motivopendiente.id }}'/>
                            <div class="form-group">
                                Descripci√≥n
                                <input class="form-control" name="descripcion" id="descripcion" type="text" placeholder="Ingrese nombre completo de la comuna" value='{{ db_motivopendiente.descripcion }}' required="required"/>
                            </div>
                            <div class="panel-footer text-center">
                                <button type="button" id="update_motivopendiente" class="btn btn-default">Grabar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->

{% endblock %}
{% block appScript %}
    <script src="views/app/js/b2b/altas.js"></script>
{% endblock %}
