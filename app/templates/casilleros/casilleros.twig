{% extends 'portal/portal' %}
{% block appBody %}
    <section class="content-header">
        <h1>
            CASILLEROS
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Resumen Gesti√≥n Ejecutivos</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered">
                            <thead>
                                <th>Ejecutivo</th>
                                {% for a in accion %}
                                    <th>{{a}}</th>
                                {% endfor %}
                                <th>TOTAL</th>
                            </thead>
                            <tbody>
                                {% for d in getEjecutivosCasilleros if false != getEjecutivosCasilleros %}
                                    <tr>
                                        <td>{{ d.name }}</td>
                                        {% set total_fila = 0 %}
                                        {% for a in accion %}
                                            {% set break_for = false %}
                                            {% for c in getResumenGestionEjecutivos if false != getResumenGestionEjecutivos %}
                                                {% if break_for == false %}
                                                    {% if a == c.accion and d.name == c.name %}
                                                        <td class="text-center">{{ c.cantidad }}</td>
                                                        {% set total_fila = total_fila + c.cantidad %}
                                                        {% set break_for = true %}
                                                    {% endif %}
                                                {% endif %}
                                            {% endfor %}
                                            {% if break_for == false %}
                                                <td ></td>
                                            {% endif %}
                                        {% endfor %}

                                        <td class="text-center">{{ total_fila }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer clearfix">
                        <table>
                            {% set total_fila = 0 %}
                            {% for c in getTotalesGestionEjecutivos if false != getTotalesGestionEjecutivos %}
                                <td class="text-left">{{ c.accion }}: {{ c.cantidad }}</td><td width='50'> </td>
                                {% set total_fila = total_fila + c.cantidad %}
                            {% endfor %}
                            <td class="text-left">TOTAL: {{ total_fila }}</td>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->

{% endblock %}
