{% extends 'portal/portal' %}
{% block appBody %}
    <section class="content-header">
        <h1>
            Eventos
            <small>Eventos A Editar</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <i class="fa fa-home"></i>
                    Home</a>
            </li>
            <li>
                <a href="evento/listar_evento">Listado de Eventos</a>
            </li>
            <li class="active">Editar Evento</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <form id="form_editar_evento" name="form_editar_evento" class="form_editar_evento">
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Editar Eventos</h3>
                        </div>
                        <div class="box-body">
                            <div class="col-md-6">
                                <label>Numero de Evento</label><input type="number" name="nEvento" id="nEvento" class="form-control" value="{{data.id}}">
                            </div>
                            <div class="col-md-6">
                                <label>Descripcion Evento:</label><input type="text" name="descripcion" id="{{data.descripcion}}" class="form-control" value="">
                            </div>
                            <div class="col-md-6">
                                <label>Observaci√≥n Evento:</label>
                                <input type="text" name="observacion" id="observacion" class="form-control" value="{{data.observacion_evento}}">
                            </div>

                            <br>
                            <div class="col-md-12 text-center">
                                <br>
                                <a data-toggle='tooltip' data-placement='top' name="modificarEvento" id="modificarEvento" class='btn btn-success btn-lg' value="{{data.id}}">Modificar Evento
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
{% endblock %}
{% block appScript %}
    <script src="views/app/js/evento/evento.js"></script>
{% endblock %}
